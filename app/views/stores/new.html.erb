<div class="container col-6 mt-4">
    <div class="row justify-content-center">
        <h1>store</h1>
    </div>
    

	
<%= form_with scope: :store, url: stores_path, local: true do |form| %>
 
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@store.errors.count, "error") %> prohibited
        this store from being saved:
      </h2>
      <ul>
        <% @store.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :summary %><br>
    <%= form.text_area :summary %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', stores_path %>
</div>