<div class="card">
    <div class="card-body">
        <div class="card-title">
            <p><%= product.name %></p>
        </div>
        <div class="card-text">
            <%= image_tag(product.product_image, :size => "50x50") %>
            <p> <small>$</small> <%= product.price%></p>
        </div>
        <div class="card-footer">
            <%= link_to  "View Product", product_path(product) %>
        </div>
    </div>
</div>