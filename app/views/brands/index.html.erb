<div class="container">
    <div class="row">
        <h1 class="mb-3">Brands</h1>
        <%= link_to 'New Brand', new_brand_path, class: 'btn btn-success btn-sm text-light ml-4 mb-3' %>
    </div>
    <div class="row mt-3">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Thumbnail</th>
                    <th colspan="3" class="text-center"> Actions</th>
                </tr>
            </thead>

            <tbody>
                <% @brands.each do |brand| %>
                <tr>
                    <td><%= brand.name %></td>
                    <% if brand.brand_image.attached? %>
                    <td><%= image_tag(brand.brand_image, :size => "50x50") %></td>
                    <%else%>
                    <td></td>
                    <%end%>
                    <td><%= link_to 'Show', brand %></td>
                    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
                    <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
      </div>
</div>