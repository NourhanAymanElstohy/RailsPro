<!DOCTYPE html>
<html>
  <head>
    <title>Electronic Shop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_admin_user %>
    <div class=" float-right">
        <%= link_to 'LogOut' , destroy_admin_user_session_path, class: 'btn btn-secondary btn-sm text-light ml-4 mb-3' %>
    </div>
    <% else %>
    <div class=" float-right">
        <%= link_to 'Register' , new_admin_user_registration_path, class: 'btn btn-success btn-sm text-light ml-4 mb-3' %>
        <%= link_to 'Login' , new_admin_user_session_path , class: 'btn btn-primary btn-sm text-light ml-4 mb-3'%>
    </div>
    <% end %>
    <% if current_admin_user %>
    <div class=" float-right">
        <%= link_to 'Orders' , orders_path, class: 'btn btn-secondary btn-sm text-light ml-4 mb-3' %>
    </div>
    <% end %>
    <div class=" float-right">
        <%= link_to 'Home' , root_path, class: 'btn btn-secondary btn-sm text-light ml-4 mb-3' %>
    </div>
  <%= render 'layouts/alerts' %>
    <%= yield %>
  </body>
</html>
