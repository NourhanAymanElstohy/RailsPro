<div class= "container">
  <div class="row">
    <h1 class="mb-3">Listing Orders</h1>
  </div>
  <div class="row mt-3">
    <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Status</th>
        <th>Order Date</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.status %></td>
          <td><%= order.created_at %></td>
          <td><%= link_to 'Confirm', '#' %></td>
          
          <td><%= link_to 'Cancel', '#',
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>