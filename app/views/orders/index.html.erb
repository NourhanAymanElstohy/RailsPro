<div class= "container">
<% if current_admin_user %>
  <div class="row">
    <h1 class="mb-3">Listing Orders</h1>
  </div>
  <div class="row mt-3">
    <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Status</th>
        <th>Order Date</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.status %></td>
          <td><%= order.created_at %></td>
          <% if current_admin_user.role == 'seller' %>
            <td><%= button_to 'Confirm', confirm_order_path(order.id), method: :post %></td>
          <% end %>
          <% if current_admin_user.role == 'seller' or current_admin_user.role == 'buyer' %>
          <td><%= button_to 'Cancel', delete_order_path(order.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
    <h1>Please sign in to access your orders</h1>
  <% end %>
</div>