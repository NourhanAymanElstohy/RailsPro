<div class="container">
        <!----if logged in is admin -->
        <div class="row mt-5">
            <div class="col-6">
                <div class="row">
                    <h1 class="mb-3">Listing Products</h1>
                    <%= link_to 'New product', new_product_path , class: 'btn btn-success btn-sm text-light ml-4 mb-3' %>
                </div>
            </div>
        </div>
        <br>
        <div class="row mt-3">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        <th colspan="3" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%if @products %>
                    <% @products.each do |product|%>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.description %></td>
                        <td><%= product.price %></td>
                        <td><%= product.quantity %></td>
                        <% if product.product_image.attached? %>
                        <td><%= image_tag(product.product_image, :size => "50x50") %></td>
                        <%else%>
                        <td></td>
                        <%end%>
                        <td><%= link_to 'Show', product_path(product) %></td>
                        <% if can? :edit , product%>
                        <td><%= link_to 'Edit', edit_product_path(product) %></td>
                        <%end%>
                        <% if can? :destroy , product%>
                        <td><%= link_to 'Destroy', product_path(product),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
                        <%end%>
                    </tr>
                    <% end %>
                    <%else%>
                    <% ' Product not found ' %>
                    <%end %>
                </tbody>
            </table>
        </div>
    </div>

