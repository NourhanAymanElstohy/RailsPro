<p>
    <strong>Name:</strong>
    <%= @product.name %>
</p>

<p>
    <strong>Description:</strong>
    <%= @product.description %>
</p>

<p>
    <strong>Price:</strong>
    <%= @product.price %>
    <%=  button_to  "Add to cart", product_items_path(product_id: @product) %> 
</p>

<p>
    <strong>Quantity:</strong>
    <%= @product.quantity %>
</p>
<% if @product.product_image.attached? %> 
<p>
    <strong>Image:</strong>
    <%= image_tag(@product.product_image, :size => "50x50" ) %>
</p>
<% end%>

<%= link_to 'Edit', edit_product_path(@product) %> |

<%= link_to 'Back', products_path %>