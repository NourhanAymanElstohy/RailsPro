<%= form_with model: @product, local: true do |form| %>

<% if @product.errors.any? %>
<div id="error_explanation">
    <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
    </h2>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="form-group">
    <%= form.label :Name %>
    <%= form.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
    <%= form.label :Price %>
    <%= form.text_field :price , class: 'form-control' %>
</div>

<div class="form-group d-block">
    <%= form.label :Quantity %>
    <%= form.text_field :quantity ,class: 'form-control' %>
</div>

<div class="form-group">
    <%= form.label :Description %>
    <%= form.text_area :description, class: 'form-control' %>
</div>

<div class="input-group mb-3 form-group">
    <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Category</label>
    </div>
    <%= collection_select( :product, :category_id, Category.all, :id, :name, {prompt: false}, {class: 'custom-select form-control',id: "inputGroupSelect01"})%>
</div>

<div class="input-group mb-3 form-group">
    <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Brands</label>
    </div>
    <%= collection_select( :product, :brand_id, Brand.all, :id, :name, {prompt: false}, {class: 'custom-select form-control',id: "inputGroupSelect01"})%>
</div>

<div class="form-group">
    <%= form.label :Image %>
    <%= form.file_field :product_image, class: 'form-control-file' %>
    <% if @product.product_image.attached? %>
    <%= image_tag @product.product_image ,class: 'form-control'%>
    <%= form.label :remove_product_image %>
    <%= form.check_box :remove_product_image %>
    <% end %>
</div>
<div class="form-group">
    <%= form.submit%>
</div>

<% end %>