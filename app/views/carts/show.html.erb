
<div class="container">
	<div class="row justify-content-center">
		<div class="col">
			<h1 class="mb-3"><strong>Shopping Cart</strong></h1>
		</div>
		<div class="col-3">
			<%= link_to 'Keep Shopping', products_path, class:"btn btn-info text-light btn-sm btn-block"  %>
		</div>
	</div>
	<hr>
<div class="row">	
	<table class="table">
	<thead class="thead-dark">
		<tr>
			<th>Image</th>
			<th>Name</th>
			<th>Description</th>
			<th>Quantity</th>
			<th>Price</th>
			<th colspan="3" class="text-center">Actions</th>
		</tr>
	</thead>
	<tbody>
          <%= render(@cart.product_items) %>
</tbody>
</table>
</div>
<hr>
<div class="m-3" style="background-color:#e9ecef">
	<div class="row">
	
		<div class="col-4">
			<%= button_to 'Empty Cart', cart_path(@cart), method: :delete, data: { confirm: "Are you sure? " }, class:"btn  btn-sm" %>
		</div>
		<div class="col-4">
			<h4 >Total <strong><%= number_to_currency(@cart.total_price) %></strong></h4>
		</div>
		<div class="col-4">
			<%= button_to 'Make Order', make_order_path(@cart), method: :post , class:"btn  btn-sm btn-block"%>
		</div>
	
						
	
	</div>
</div>
</div>