<div class="container">
    <!--p id="notice"><%= notice %></p-->
    <div class="container">
        <div class="row">
            <h1 class="mb-3">Categories</h1>
            <%= link_to 'New Category', new_category_path, class: 'btn btn-success btn-sm text-light ml-4 mb-3' %>
        </div>
        <div class="row mt-3">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Thumbnail</th>
                        <th colspan="3" class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% @categories.each do |category| %>
                    <tr>
                        <td><%= category.name %></td>
                        <% if category.cat_image.attached? %>
                        <td><%= image_tag(category.cat_image, :size => "50x50") %></td>
                        <%else%>
                        <td></td>
                        <%end%>
                        <td><%= link_to 'Show', category %></td>
                        <td><%= link_to 'Edit', edit_category_path(category) %></td>
                        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>